<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="export_json">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">json_export</item>
                        <item name="label" xsi:type="string" translate="true">Export Json</item>
                        <item name="url" xsi:type="url" path="cmscontent/block/massExport"/>
                    </item>
                </argument>
            </action>
            <action name="export_json_split">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">json_split_export</item>
                        <item name="label" xsi:type="string" translate="true">Export as split Json files</item>
                        <item name="url" xsi:type="url" path="cmscontent/block/massExport/split/1"/>
                    </item>
                </argument>
            </action>
            <action name="export_xml">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">xml_export</item>
                        <item name="label" xsi:type="string" translate="true">Export XML</item>
                        <item name="url" xsi:type="url" path="cmscontent/block/massExport/type/xml"/>
                    </item>
                </argument>
            </action>
            <action name="export_xml_split">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">xml_split_export</item>
                        <item name="label" xsi:type="string" translate="true">Export as split XML files</item>
                        <item name="url" xsi:type="url" path="cmscontent/block/massExport/type/xml/split/1"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
