<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="cms_block_save_before">
        <observer instance="Overdose\CMSContent\Observer\CmsSaveBefore"
                  name="overdose_cmscontent_observer_cms_blocksavebefore_cms_block_save_before"/>
    </event>
    <event name="cms_page_save_before">
        <observer instance="Overdose\CMSContent\Observer\CmsSaveBefore"
                  name="overdose_cmscontent_observer_cms_pagesavebefore_cms_page_save_before"/>
    </event>
    <event name="cms_page_delete_commit_after">
        <observer instance="Overdose\CMSContent\Observer\DeleteContentVersion"
                  name="overdose_cmscontent_cms_page_delete_after"/>
    </event>
    <event name="cms_block_delete_commit_after">
        <observer instance="Overdose\CMSContent\Observer\DeleteContentVersion"
                  name="overdose_cmscontent_cms_block_delete_after" />
    </event>
</config>
